<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TipCalculatorActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp">

    <TextView
        android:id="@+id/CheckAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Amount: "
        android:textSize="18dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:id="@+id/checkAmountValue"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <TextView
            android:id="@+id/PartySize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Party Size: "
            android:textSize="18dp"
            android:layout_marginRight="48dp"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:id="@+id/partySizeValue"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            />
    </LinearLayout>

    <Button
        android:id="@+id/buttonCompute"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="Compute Tip"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:text="Tips and Totals (Per Person) "
        android:fontFamily="sans-serif-medium"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="30dp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_margin="22dp">

        <TextView
            android:id="@+id/Tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:text="Tip: "
            android:layout_marginRight="10dp"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/val1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:text="15%:"
            android:textSize="16dp"
            />

        <EditText
            android:id="@+id/fifteenPercentTipValue"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            />

        <TextView
            android:id="@+id/val2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textSize="16dp"
            android:text="20%:"
            />

        <EditText
            android:id="@+id/twentyPercentTipValue"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            />

        <TextView
            android:id="@+id/val3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="25%:"
            />

        <EditText
            android:id="@+id/twentyfivePercentTipValue"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_margin="22dp">

        <TextView
            android:id="@+id/Total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:text="Total: "
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/val4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15%"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/fifteenPercentTotalValue"
            android:layout_width="54dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/val5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="20%"
            />

        <EditText
            android:id="@+id/twentyPercentTotalValue"
            android:layout_width="52dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/val6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="25%"
            />

        <EditText
            android:id="@+id/twentyfivePercentTotalValue"
            android:layout_width="52dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</android.support.v7.widget.LinearLayoutCompat>